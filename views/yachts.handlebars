<table class="table">
  <thead>
    <tr>
      <th scope="col">Yacht name</th>
      <th scope="col">Client</th>
      <th scope="col">Destination</th>
      <th scope="col">Departure - Arrival</th>
      <th scope="col">Status</th>
      <th scope="col">Date created</th>
    </tr>
  </thead>
  <tbody>
{{#each yachts}}
    <tr>
      <th scope="row">{{name}}</th>
      <td>{{client}}</td>
      <td>{{destination}}</td>
      <td>{{date}}</td>
      <td class="status status{{@index}}">{{status}}</td>
      <td class="date">{{datecreated}}</td>
    </tr>
{{else}}
    <p>No charters sorry</p>
{{/each}}
    
   
  </tbody>
</table>