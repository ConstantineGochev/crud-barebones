
{{#if user.is_admin}}
<table class="table">
  <thead>
    <tr>
      <th scope="col">User name</th>      
      <th scope="col">Yacht</th>
      <th scope="col">Destination</th>
      <th scope="col">Departure - Arrival date</th>
      <th scope="col">Status</th>
      <th scope="col">Manage Charter</th>      
    </tr>
  </thead>
  <tbody>
{{#each yachts}}
    <tr>
      <th scope="row">{{username}}</th>      
      <th scope="row">{{name}}</th>
      <td>{{destination}}</td>
      <td>{{date}}</td>
      <td class="status status{{@index}}">{{status}}</td>
      <td><a href="/yachts/allyachts/edit/{{id}}" class="btn btn-dark btn-block">EDIT</a></td>
      <td><form method="post" action="/yachts/{{id}}?_method=DELETE">
       <input type="hidden" name="_method" value="DELETE">
       <input type="submit" value="Delete" class="btn btn-danger btn-block">
      </form></td>
    </tr>
    
{{else}}
    <p>No charters sorry</p>
{{/each}}

{{/if}}