{{#if user.is_admin}}
<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <img class="logo" src="/img/logo.jpg">
            <h3 class="text-center">Account register</h3>
            <form method="post" action="/yachts/register">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" for="name" name="name" class="form-control" value="{{name}}" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" for="email" name="email" class="form-control" value="{{email}}" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" for="password" name="password" class="form-control" 
                    value="{{password}}" required>
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input type="password" for="password" name="password2" class="form-control"
                     value="{{password2}}" required>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>
{{/if}}